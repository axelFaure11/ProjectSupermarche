<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>afficheProduits.html</welcome-file>
    </welcome-file-list>
    <filter-mapping>
        <filter-name>checkConnection</filter-name>
        <url-pattern>/logged/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>
            servlets.DatabaseInitializer
        </listener-class>
    </listener>
</web-app>